{
  "private": true,
  "name": "design",
  "homepage": "https://duanpingbi.github.io/design",
  "scripts": {
    "start": "dumi dev",
    "build": "dumi build",
    "docs:deploy": "gh-pages -d dist",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\""
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@umijs/plugin-sass": "^1.1.1",
    "dumi": "^1.1.33",
    "gh-pages": "^3.2.3",
    "lint-staged": "^10.0.7",
    "node-sass": "^4.0.0",
    "prettier": "^2.2.1",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "clsx": "^1.1.1"
  }
}
